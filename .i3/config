#bindsym $mod+space [window_role="[Cc]onversation.*|HipChat.*"] scratchpad show
bindsym $mod+space [title="HipChat.*"] scratchpad show
#bindsym $mod+space [window_role="chat"] scratchpad show
bindsym $mod+Shift+equal move scratchpad
bindsym $mod+equal scratchpad show

# setup our mark for the scratchpad
bindsym $mod+Shift+m mark scratchpad
bindsym $mod+Tab [con_mark="scratchpad"] scratchpad show

