# This config is for our personal workspace setup
# switch to workspace
bindsym $mod+2 workspace mirage; mode "mirage"
# move window to workspace
bindsym $mod+Shift+2 move container to workspace mirage

mode "mirage" {
  bindsym $mod+t exec /home/dsteen/scripts/raise_or_launch_sway.sh -c app.asana.com__0_home_794179816889135 chromium --user-data-dir=/home/dsteen/.config/chromium/Mirage --app=https://app.asana.com/0/home/794179816889135
  bindsym $mod+s exec /home/dsteen/scripts/raise_or_launch_sway.sh -c -c mirageid.slack.com chromium --user-data-dir=/home/dsteen/.config/chromium/Mirage --app=https://mirageid.slack.com
  bindsym $mod+w exec /home/dsteen/scripts/raise_or_launch_sway.sh -c 'mirage-browser' firefox -P Mirage --class=mirage-browser
  bindsym $mod+m exec /home/dsteen/scripts/raise_or_launch_sway.sh -c '.* - MirageId Mail' chromium --user-data-dir=/home/dsteen/.config/chromium/Mirage --app=https://gmail.com
  bindsym $mod+e exec /home/dsteen/scripts/raise_or_launch_sway.sh -c 'terminal-mirage' gnome-terminal --title terminal-mirage --profile mirage
  #bindsym $mod+d exec /home/dsteen/scripts/raise_or_launch_sway.sh -w -c 'code-oss' code-oss

  # defaults
  bindsym $mod+Return exec $term
  bindsym $mod+Shift+q kill
  bindsym $mod+space exec $menu
  bindsym $mod+Shift+c reload
  bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
  bindsym $mod+$left focus left
  bindsym $mod+$down focus down
  bindsym $mod+$up focus up
  bindsym $mod+$right focus right
  bindsym $mod+Left focus left
  bindsym $mod+Down focus down
  bindsym $mod+Up focus up
  bindsym $mod+Right focus right
  bindsym $mod+Shift+$left move left
  bindsym $mod+Shift+$down move down
  bindsym $mod+Shift+$up move up
  bindsym $mod+Shift+$right move right
  bindsym $mod+Shift+Left move left
  bindsym $mod+Shift+Down move down
  bindsym $mod+Shift+Up move up
  bindsym $mod+Shift+Right move right
  bindsym $mod+b splith
  bindsym $mod+v splitv
  bindsym $mod+ctrl+s layout stacking
  bindsym $mod+ctrl+w layout tabbed
  bindsym $mod+ctrl+e layout toggle split
  bindsym $mod+f fullscreen
  bindsym $mod+Shift+space floating toggle
  bindsym $mod+ctrl+space focus mode_toggle
  bindsym $mod+ctrl+a focus parent
  bindsym $mod+Shift+minus move scratchpad
  bindsym $mod+minus scratchpad show

 # modes
  bindsym $mod+1 workspace traitify; mode "traitify"
  bindsym $mod+Shift+1 move container to workspace traitify
  bindsym $mod+2 workspace mirage; mode "mirage"
  bindsym $mod+Shift+2 move container to workspace mirage
  bindsym $mod+3 workspace personal; mode "personal"
  bindsym $mod+Shift+3 move container to workspace personal
}
