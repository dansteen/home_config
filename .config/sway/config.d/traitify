# This config is for our personal workspace setup
# switch to workspace
bindsym $mod+1 workspace traitify; mode "traitify"
# move window to workspace
bindsym $mod+Shift+1 move container to workspace traitify

mode "traitify" {
  bindsym $mod+t exec /home/dsteen/scripts/raise_or_launch_sway.sh -n -c app.asana.com__0_home_225445204252130 chromium --user-data-dir=/home/dsteen/.config/chromium/Traitify --app=https://app.asana.com/0/home/225445204252130
  bindsym $mod+s exec /home/dsteen/scripts/raise_or_launch_sway.sh -n -s -c traitify.slack.com chromium --force-device-scale-factor=2 --user-data-dir=/home/dsteen/.config/chromium/Traitify --app=https://traitify.slack.com
  bindsym $mod+a exec /home/dsteen/scripts/raise_or_launch_sway.sh -c 'traitify-aws' firefox -P traitify-aws --name=traitify-aws
  bindsym $mod+w exec /home/dsteen/scripts/raise_or_launch_sway.sh -c 'traitify-browser' firefox -P Traitify --name=traitify-browser
  bindsym $mod+m exec /home/dsteen/scripts/raise_or_launch_sway.sh -n -c '.* - Traitify Mail' chromium --force-device-scale-factor=2 --enable-use-zoom-for-dsf --user-data-dir=/home/dsteen/.config/chromium/Traitify --app=https://gmail.com
  bindsym $mod+e exec /home/dsteen/scripts/raise_or_launch_sway.sh -c 'terminal-traitify' gnome-terminal --title terminal-traitify --profile traitify
  bindsym $mod+n exec /home/dsteen/scripts/raise_or_launch_sway.sh -c 'traitify-jenkins' firefox -P Jenkins --name=traitify-jenkins
  bindsym $mod+i exec /home/dsteen/scripts/raise_or_launch_sway.sh -n -c '.*Workflowy.*' chromium --user-data-dir=/home/dsteen/.config/chromium/Traitify --app=https://workflowy.com
  bindsym $mod+d exec /home/dsteen/scripts/raise_or_launch_sway.sh -w -c 'code-oss' code-oss

  # defaults
  bindsym $mod+Return exec $term
  bindsym $mod+Shift+q kill
  bindsym $mod+space exec $menu
  bindsym $mod+Shift+c reload
  bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
  bindsym $mod+$left focus left
  bindsym $mod+$down focus down
  bindsym $mod+$up focus up
  bindsym $mod+$right focus right
  bindsym $mod+Left focus left
  bindsym $mod+Down focus down
  bindsym $mod+Up focus up
  bindsym $mod+Right focus right
  bindsym $mod+Shift+$left move left
  bindsym $mod+Shift+$down move down
  bindsym $mod+Shift+$up move up
  bindsym $mod+Shift+$right move right
  bindsym $mod+Shift+Left move left
  bindsym $mod+Shift+Down move down
  bindsym $mod+Shift+Up move up
  bindsym $mod+Shift+Right move right
  bindsym $mod+b splith
  bindsym $mod+v splitv
  bindsym $mod+ctrl+s layout stacking
  bindsym $mod+ctrl+w layout tabbed
  bindsym $mod+ctrl+e layout toggle split
  bindsym $mod+f fullscreen
  bindsym $mod+Shift+space floating toggle
  bindsym $mod+ctrl+space focus mode_toggle
  bindsym $mod+ctrl+a focus parent
  bindsym $mod+Shift+minus move scratchpad
  bindsym $mod+minus scratchpad show

 # modes
  bindsym $mod+1 workspace traitify; mode "traitify"
  bindsym $mod+Shift+1 move container to workspace traitify
  bindsym $mod+2 workspace mirage; mode "mirage"
  bindsym $mod+Shift+2 move container to workspace mirage
  bindsym $mod+3 workspace personal; mode "personal"
  bindsym $mod+Shift+3 move container to workspace personal
}
