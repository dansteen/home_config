"xdotool set_desktop 0; killall xbindkeys; xbindkeys -f ~/.config/xbindkeys/traitify"
  Mod4 + 1 + Release

#"qdbus org.kde.ActivityManager /ActivityManager/Activities SetCurrentActivity 1fe55996-d41a-454a-8bd2-7411349f466d; killall xbindkeys; xbindkeys -f ~/.config/xbindkeys/mirage"
"xdotool set_desktop 1; killall xbindkeys; xbindkeys -f ~/.config/xbindkeys/mirage"
  Mod4 + 2 + Release

#"qdbus org.kde.ActivityManager /ActivityManager/Activities SetCurrentActivity dc28b382-b6e8-415f-9d1f-c00697b893d7; killall xbindkeys; sleep 0.3; xbindkeys -f ~/.config/xbindkeys/personal"
"xdotool set_desktop 2; killall xbindkeys; xbindkeys -f ~/.config/xbindkeys/personal"
  Mod4 + 3 + Release

### simulate right mouse clicks with window click
"/bin/xte -i $(xinput list --id-only 'Virtual core XTEST pointer') 'mouseclick 3' &"
  Mod4 + b:1 + Release
  
